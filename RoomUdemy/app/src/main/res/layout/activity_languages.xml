<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent"
              tools:context="ec.com.paul.roomudemy.ui.LanguagesActivity">

    <EditText
            android:id="@+id/et_name_curse"
            android:hint="Nombre Curso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"/>

    <Button
            android:id="@+id/btn_save"
            android:hint="Salvar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/btn_read_language"
            android:hint="Leer todos Lenguajes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/btn_update_language"
            android:hint="Actualizar Lenguaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/btn_delete_language"
            android:hint="Borrar Lenguaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</LinearLayout>