<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent"
              tools:context="ec.com.paul.roomudemy.ui.CurseActivity">

    <EditText
            android:id="@+id/et_id_professor"
            android:hint="idProfesor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"/>

    <EditText
            android:id="@+id/et_name_curse"
            android:hint="Nombre Curso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"/>

    <EditText
            android:id="@+id/et_duration_curse"
            android:hint="Duracion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"/>

    <Button
            android:id="@+id/bt_save"
            android:hint="Salvar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"/>

    <Button
            android:id="@+id/bt_read_curse_by_proffesor"
            android:hint="Leer Cursos por Profesor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"/>

    <Button
            android:id="@+id/bt_update_curse"
            android:hint="Actualizar Curso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"/>

    <Button
            android:id="@+id/bt_delete_curse"
            android:hint="Borrar Curso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"/>

</LinearLayout>